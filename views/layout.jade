doctype 5
html(lang="en")
  head
    title=title

    meta(charset="utf-8")
    meta(name="gtv-autozoom", content="off")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    //Twitter Bootstrap
    link(rel='stylesheet', href='/css/twitter/bootstrap.min.css')
    //Global CSS
    link(rel='stylesheet', href='/css/style.css')
    //Twitter Bootstrap Theme
    link(rel='stylesheet', href='/css/themes/readable/bootstrap.min.css')
    //Twitter Bootstrap Responsive
    link(rel='stylesheet', href='/css/twitter/bootstrap-responsive.min.css')
    
    block stylesheets

    script(type="text/javascript", charset="utf-8", src="//ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js")
    script(type="text/javascript", charset="utf-8", src="//ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js")
        
    //Date format
    script(type="text/javascript", src='/js/plugins/jquery.jqia.dateFormat.js')
    //Socket.io
    script(type="text/javascript", src='/socket.io/socket.io.js')
    
    script(type="text/javascript")
      $(document).ready(function(){
        $.getScript("/js/global.js")
      });

    block javascripts

  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          .masthead
              ul.nav.nav-pills.pull-left
                li: a(href="http://screenscollide.com", target="_new") ScreensCollide.com
                li: a(href='/') Home
                li: a(href='/tv') Watch
          a(href="https://github.com/screenscollide/scrubthetv", target="_new")
            img(style="position: absolute; top: 0; right: 0; border: 0;", src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png", alt="Fork me on GitHub")
          
    div(class="container")    
        
      block content
      
      .row
        .span10
          footer
              p
                &copy;
                span &nbsp;
                &nbsp;&nbsp;
                a(href="//twitter.com/screenscollide", target="_new") @screenscollide
                &nbsp;&nbsp;Developed by 
                a(href="//twitter.com/chrisaiv", target="_new") @chrisaiv

      include analytics
      